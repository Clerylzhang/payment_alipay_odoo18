<!-- views/payment_provider_templates.xml -->
<odoo>
    <data>
        <!-- 定义支付宝支付表单模板 -->
        <record id="view_payment_provider_alipay_form" model="ir.ui.view">
            <field name="name">payment.provider.alipay.form</field>
            <field name="model">payment.provider</field>
            <field name="arch" type="xml">
                <form string="Alipay Payment Provider">
                    <group>
                        <field name="alipay_app_id"/>
                        <field name="alipay_public_key"/>
                        <field name="alipay_private_key"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>